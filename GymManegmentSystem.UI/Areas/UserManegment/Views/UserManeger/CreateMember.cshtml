@model CreateMemberVM
@{
    ViewData["Title"] = "CreateMember";
    Layout = "~/Areas/UserManegment/Views/Shared/_UserManegmentLayout.cshtml";
}

<div class="container">
    <div class="row col-12" style="padding-right: 5%">
        <h1>افزودن عضو جدید</h1>
        <br />
        <div class="row col-md-7">
            <div class="widget">
                <div class="widget-header bordered-top bordered-palegreen">
                    <span class="widget-caption"> مشخصات فردی</span>
                </div>
                <div class="widget-body">
                    <div class="collapse in">
                        <form  asp-area="UserManegment" asp-controller="UserManeger" asp-action="Index"  >
                            <div class="form-group">
                                <label asp-for="FirstName">نام </label>
                                <input class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName">نام خانوادگی </label>
                                <input class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="BirthDate">تاریخ تولد </label>
                                <br />
                                <input class="calendar" asp-for="BirthDate" style="max-width: 100%" />
                            </div>
                            <div class="form-group">
                                <label asp-for="MobileNumber">شماره موبایل </label>
                                <input class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>نوع عضویت </label>
                                <input class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-success shiny ">ثبت</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <div class="row col-md-5">
            <img src="~/img/itl.cat_fitness-wallpaper_3147325.png" style="max-width: 100%;max-height: 150% ;padding-right: 5%" />
        </div>
    </div>
</div>

