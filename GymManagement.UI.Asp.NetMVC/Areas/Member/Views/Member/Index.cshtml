@using GymManagement.UI.Asp.NetMVC.Models.MemberShipVM
@model IEnumerable<GymManagement.UI.Asp.NetMVC.Models.MemberVM.MemberVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
   }
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-area="Member" asp-controller="Member" asp-action="Index">Home</a>
        </li>
    </ul>
</div>

<div class="col-xs-12 col-md-12" style="margin-top: 1%">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Member List</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
                <a href="#" data-toggle="dispose">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="widget-body">
            <div class="table-toolbar" style="">
                <a id="editabledatatable_new" asp-area="Member" asp-controller="Member" asp-action="Create" class="btn btn-success">
                    Add New User
                </a>
            </div>
            <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                <div class="DTTT btn-group">
                </div>
                <div id="editabledatatable_filter" class="dataTables_filter">
                    <label>
                        <input type="search" class="form- input-lg" placeholder="search" aria-controls="editabledatatable">
                    </label>
                    <button class="btn btn-primary btn-group">Search</button>
                </div>

                <table class="table table-striped table-hover table-bordered dataTable no-footer" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                    Username
                                                : activate to sort column descending" style="width: 114.4px;">
                                Username
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Last Name
                                                : activate to sort column ascending" style="width: 100.4px;">
                                Last Name
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Points
                                                : activate to sort column ascending" style="width: 74.4px;">
                                Mobile
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Notes
                                                : activate to sort column ascending" style="width: 70.4px;">
                                MembershipType
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Notes
                                                : activate to sort column ascending" style="width: 50.4px;">
                                Gender
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Notes
                                                : activate to sort column ascending" style="width: 80.4px;">
                                Avatar
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                   MembershipType
                                                : activate to sort column ascending" style="width: 70.4px;">
                                Year of birth
                            </th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="

                                                " style="width: 213.4px;">

                                Operations
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr role="row" class="odd">
                                <td class="sorting_1">
                                    @{
                                        if (item.IsPresent == true)
                                        {
                                            <p class="text green">@item.FirstName</p>
                                        }
                                        else
                                        {
                                            <p class="text red">@item.FirstName</p>
                                        }
                                    }
                                </td>
                                <td>@item.LastName</td>
                                <td>@item.MobileNumber</td>
                                <td>
                                    @switch (item.Membership_Id)
                                    {
                                        case 1:
                                            <p class="text text gold">Golden</p>
                                            break; 
                                        case 2:
                                            <p class="text text silver">Silver</p>
                                            break; 
                                        case 4:
                                            <p class="text text red">Bronze</p>
                                            break; 
                                        case 6:
                                            <p class="text text text-black">Daily</p>
                                            break; 
                                    }
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>
                                    <img src="~/Img/@item.Avatar" class="img-thumbnail" style="max-height: 60px;max-width: 60px" />
                                </td>
                                <td class="center ">@item.BirthDate.Year</td>
                                <td>
                                    <a asp-area="Member" asp-controller="Member" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i> Edit</a>
                                    <a asp-area="Member" asp-controller="Member" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-xs edit"><i class="fa fa-info"></i> Details</a>
                                    <a href="#" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> Delete</a>
                                    <a href="#" class="btn btn-xs azure" style="margin: 0.5px"><i class="fa fa-mail-forward"></i> Send Email</a>
                                    <a href="#" class="btn btn-primary btn-xs " style="margin: 0.5px"><i class="fa fa-file-text"></i> Send SMS</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><div class="row DTTTFooter"><div class="col-sm-6"><div class="dataTables_info" id="editabledatatable_info" role="status" aria-live="polite">Showing 1 to 5 of 6 entries</div></div><div class="col-sm-6"><div class="dataTables_paginate paging_bootstrap" id="editabledatatable_paginate"><ul class="pagination"><li class="prev disabled"><a href="#">Prev</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li class="next"><a href="#">Next</a></li></ul></div></div></div>
            </div>
        </div>
    </div>
</div>

