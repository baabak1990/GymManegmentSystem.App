@model GymManagement.UI.Asp.NetMVC.Models.MemberVM.MemberVm
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a asp-area="Member" asp-controller="Member" asp-action="Index">Home</a>
        </li>
        <li class="active">
            <a asp-area="Member" asp-controller="Member" asp-action="Edit">Edit Member</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-lg-8 col-sm-8 col-xs-12" style="margin-top: 1%;margin-left: 1%">
        <div class="widget flat radius-bordered">
            <div class="widget-header bg-blue">
                <span class="widget-caption">Edit Form</span>
            </div>
            <div class="widget-body">
                <div id="registration-form">
                    <form asp-area="Member" asp-controller="Member" asp-action="Edit" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                        <div class="form-title">
                            User Information
                        </div>
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <input type="text" class="form-control" asp-for="FirstName">
                                <i class="glyphicon glyphicon-user circular yellow"></i>
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
                                <i class="fa fa-info azure"></i>
                            </span>
                        </div>
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" class="form-control" placeholder="Last Name" asp-for="Email">
                                    <i class="fa fa-envelope orange"></i>
                                </span>
                            </div>
                     
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <input type="date" class="form-control" placeholder="Birth Date" asp-for="BirthDate">
                                <i class="fa fa-calendar blue"></i>
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <select type="text" class="form-control" asp-for="Membership_Id" asp-items="@ViewBag.Memberships"></select>

                            </span>
                        </div>
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <select type="text" class="form-control" asp-for="Gender" asp-items="@ViewBag.Gender"></select>

                            </span>
                        </div>
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <input type="text" class="form-control" asp-for="MobileNumber" placeholder="Phone">
                                <i class="fa fa-mobile purple"></i>
                            </span>
                        </div>

                        <br />
                        <button type="submit" class="btn btn-blue">Register</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-3 col-sm-3 col-xs-3">
        <img src="~/Img/@Model.Avatar" style="max-width: 350px;max-height: 350px;margin-top: 3%" />
    </div>
</div>

