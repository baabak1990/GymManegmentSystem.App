@{
    ViewData["Title"] = "Gym Management";
}


<div class="container col-lg-12">
    <div class="row">

        <div class="col-md-9 col-sm-9 col-lg-9">
            <img src="Img/Gym.jpg" style="margin-top:6%;max-width:90%" />
        </div>
        <div class=" col-md-3 col-sm-3 col-lg-3 " style="margin-top:25%">
            <form>
                <div class="border  col-12">
                    <div class="col-sm-8  ">
                        <i class="fa fa-user">
                            <label style="margin-left: 5%">UserName:</label>
                        </i>
                        <input class="form-control" style="margin-left: 3%" />
                    </div>
                    <div class="col-sm-8 " style="margin-top: 2%">
                        <i class="fa fa-user">
                            <label style="margin-left: 5%">Password:</label>
                        </i>
                        <input class="form-control" type="password" style="margin-left: 3%" />
                    </div>
                    <br />
                    <button class="btn btn-success" style="margin-left: 40%;margin-bottom: 5%">Submit</button>
                </div>
            </form>
            <br />
        </div>
    </div>
</div>


